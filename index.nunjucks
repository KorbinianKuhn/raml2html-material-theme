<!DOCTYPE HTML>
<html>

<head>
    <title>{{ title }} API documentation</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="generator" content="https://github.com/raml2html/raml2html {{ config.raml2HtmlVersion }}">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <style>
        .badge {
            text-transform: uppercase;
            font-weight:bold !important;
            display: flex !important;
            align-items: center !important;
        }

        .badge i {
            margin-right: 0.2rem;
            font-size: 1rem;
        }

        .badge-get {
            background-color: #2196f3 !important;
        }

        .badge-post {
            background-color: #4caf50 !important;
        }

        .badge-delete {
            background-color: #f44336 !important;
        }

        .badge-put {
            background-color: #ff9800 !important;
        }

        .badge-patch {
            background-color: #673ab7 !important;
        }

        .badge-head {
            background-color: #222222 !important;
        }

        .badge-options {
            background-color: #616161 !important;
        }

        .text-primary {
            color: #ee6e73 !important;
        }

        .bg-primary {
            background-color:#ee6e73 !important;
        }

        .tabs a {
            color: #039be5 !important;
        }

        .tabs a:focus {
            background-color: #e1f5fe !important;
        }

        .tabs .tab a.active { 
            border-bottom: 2px solid #4db6ac; 
        }

        .tabs .indicator { display: none; }

        .tabs .tab a.active { 
            border-bottom: 2px solid #039be5; 
        }

        .tabs .indicator {
            background-color: #039be5 !important;
        }

        .tabs.response a {
            color: #4db6ac !important;
        }

        .tabs.response .tab a.active { 
            border-bottom: 2px solid #4db6ac; 
        }

        .tabs.response a:focus {
            background-color: #e0f2f1 !important;
        }

        .tabs.response .indicator{
            background-color: #4db6ac !important;
        }

        .space-between {
            justify-content: space-between;
        }

        .d-flex {
            display:flex;
        }

        .chip {
            line-height: 22px;
            font-size:15px;
            height:22px;
            margin-bottom:0;
            border-radius:2px;
            padding: 0 5px;
            margin-left:5px;
        }

        ul.browser-default {
            padding-left:20px;
        }
        ul.browser-default li {
            margin-top:10px;
        }

        .example {
            border: 1px solid #e0e0e0;
        }

        .example pre {
            padding: 8px;
            margin: 0px;
        }

        .modal {
            height: 80% !important;
            max-height: 80% !important;
            width: 60% !important;
        }
    </style>

</head>

<body>

    <div class="section grey darken-4">
        <div class="container">
            <h3 class="white-text">{{ title }} API documentation{% if version %} <small class="white-text">version {{ version }}</small>{% endif %}</h3>
            <p class="white-text">{{ baseUri }}</p>
        </div>
    </div>

    {% if description or documentation.length %}
    <div class="container">
        <div class="section">
            {% if description %}
            <p>{{ description }}</p>
            {% endif %} {% if baseUriParameters %}
            <ul>
                {% for item in baseUriParameters %} {% include "./templates/item.nunjucks" %} {% endfor %}
            </ul>
            {% endif %} {% for chapter in documentation %}
            <h5>{{ chapter.title }}</h5>
            {% markdown %} {{ chapter.content }} {% endmarkdown %} {% endfor %}
        </div>
    </div>

    <div class="divider"></div>
    {% endif %}

    <div class="container">
        {% for resource in resources %}
        <div class="section">
            <h5>{% if resource.displayName %}{{ resource.displayName}}{% else %}{{ resource.relativeUri }}{% endif %}</h5>
            <ul class="collection">
                {% include "./templates/resource.nunjucks" %}
            </ul>
        </div>
        {% endfor %}
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            M.AutoInit();
        });
    </script>
</body>

</html>